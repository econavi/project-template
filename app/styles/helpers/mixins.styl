clearfix()
	zoom 1
	&:after
	&:before
		content ""
		display table
	&:after
		clear both
    
center()
	margin 0 auto
	
bg(color)
	background-color color
	
size()
	if length(arguments) == 1
		width: arguments[0]
	else
		width: arguments[0]
		height: arguments[1]
		
