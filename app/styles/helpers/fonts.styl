// Миксин для подключения
fontFace($path, $name, $weight=normal, $style=normal)
	@font-face
		font-family '' + $name + ''
		src local('' + $name + ''),
				url('../assets/fonts/' + $path + '/' + $name + '.woff2') format('woff2'),
				url('../assets/fonts/' + $path + '/' + $name + '.woff') format('woff'),
				url('../assets/fonts/' + $path + '/' + $name + '.ttf') format('truetype')
		font-weight $weight
		font-style $style
		font-display swap

// Миксин для назначения
fontFamily($name)
	font-family '' + $name + '', sans-serif


// Подключение шрифтов
fontFace(montserrat, montserrat-regular, 400)
fontFace(montserrat, montserrat-italic, 400, italic)

fontFace(montserrat, montserrat-semibold, 600)
fontFace(montserrat, montserrat-semibolditalic, 600, italic)

fontFace(montserrat, montserrat-bold, 700)
fontFace(montserrat, montserrat-bolditalic, 700, italic)


/***********************************	
	
	Начертание шрифтов:
	
	100 - Thin (тонкое начертание)
	200 - Extra-Light (сверхсветлое)
	300 - Light (светлое)
	400 - Regular (нормальное)
	500 - Medium (среднее)
	600 - Semi-Bold (полужирное)
	700 - Bold (жирное)
	800 - Extra-Bold (сверхжирное)
	900 - Black (тяжёлое)

