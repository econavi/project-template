html
	font-size 10px

img
	max-width 100%
	height auto

.visualli-hidden
	position absolute
	width 1px
	height 1px
	margin -1px
	padding 0
	border 0
	clip rect(0 0 0 0)
	overflow hidden
	
container-fluid()
	width auto
	margin 0 auto
	
	+above($tablet)
		width 84%
		max-width 960px

