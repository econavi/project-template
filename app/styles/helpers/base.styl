*,
*:before, 
*:after
	box-sizing border-box

html
	position relative
	
	width 100%
	height 100%
	min-height 100%
	
	font-size 10px

body
	width 100%
	height 100%
	min-height 100%
	
	fontFamily($font-default)
	font-size 1.6rem
	font-weight 400
	
	overflow-y auto
	
	-webkit-overflow-scrolling touch

img
	max-width 100%
	height auto

h1, 
h2, 
h3,
h4,
h5,
h6,
b,
strong
	 fontFamily($font-default-semibold)
	 font-weight 600

i,
em
	 fontFamily($font-default-italic)
	 font-weight 400
