*,
*:before,
*:after
	box-sizing border-box
	font-family inherit

html
	position relative

	width 100%
	height 100%
	min-height 100%

	font-size 10px

body
	width 100%
	height 100%
	min-height 100%
	padding 0

	fontFamily($font-default)
	font-size 1.6rem
	font-weight 400

	smooth-scroll()

	-webkit-text-size-adjust none
	-moz-text-size-adjust none
	-ms-text-size-adjust none

img
	max-width 100%
	height auto

h1,
h2,
h3,
h4,
h5,
h6,
b,
strong
	 fontFamily($font-default-semibold)
	 font-weight 600

i,
em
	 fontFamily($font-default-italic)
	 font-weight 400

input[placeholder]
	text-overflow ellipsis

input:focus::placeholder
	color: transparent

textarea
	resize vertical

table
  border-collapse collapse

@media (pointer:coarse)
	button
		color red
